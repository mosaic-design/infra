{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../dist/out-tsc",
        "types": ["node"],
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationMap": false,
        "sourceMap": false
    },
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "include": ["**/*.ts"],
    "exclude": ["jest.config.js", "src/**/*.spec.ts", "src/**/*.test.ts"]
}

