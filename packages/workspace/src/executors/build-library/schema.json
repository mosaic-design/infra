{
    "$schema": "http://json-schema.org/schema",
    "cli": "nx",
    "$id": "build-lib",
    "type": "object",
    "properties": {
        "external": {
            "type": "array",
            "description": "A list of external modules that will not be bundled (`react`, `react-dom`, etc.).",
            "items": {
                "type": "string"
            }
        },
        "styles": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "type": "object",
                        "properties": {
                            "input": {
                                "type": "string",
                                "description": "The file to include."
                            },
                            "bundleName": {
                                "type": "string",
                                "description": "The bundle name for this extra entry point."
                            },
                            "keepFormat": {
                                "type": "boolean",
                                "description": "Should builder keep sass syntax.",
                                "default": false
                            }
                        },
                        "additionalProperties": false,
                        "required": ["input", "bundleName"]
                    },
                    {
                        "type": "string",
                        "description": "The file to include."
                    }
                ]
            },
            "default": []
        },
        "globals": {
            "description": "A mapping of node modules to their `UMD` global names. Used by the `UMD` bundle.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "moduleId": {
                        "type": "string",
                        "description": "The node module to map from (e.g. `react-dom`)."
                    },
                    "global": {
                        "type": "string",
                        "description": "The global name to map to (e.g. `ReactDOM`)."
                    }
                },
                "additionalProperties": false,
                "required": ["moduleId", "global"]
            },
            "default": []
        },
        "docsGen": {
            "type": "object",
            "description": "Contains options for autonomous docs generation.",
            "items": {
                "type": "object",
                "properties": {
                    "srcPath": {
                        "type": "string"
                    },
                    "enabled": {
                        "type": "boolean"
                    },
                    "include": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "exclude": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            },
            "default": {
                "enabled": false,
                "include": [],
                "exclude": []
            }
        },
        "outputPath": {
            "type": "string",
            "description": "The output path of the generated files."
        },
        "format": {
            "type": "string",
            "description": "Type of output bundle.",
            "enum": ["module", "commonjs"]
        },
        "assets": {
            "type": "array",
            "description": "List of static assets.",
            "default": [],
            "items": {
                "type": "object",
                "properties": {
                    "glob": {
                        "type": "string"
                    },
                    "input": {
                        "type": "string"
                    },
                    "output": {
                        "type": "string"
                    }
                }
            }
        },
        "versionPlaceholder": {
            "type": "string",
            "description": "Library dependencies versions placeholder.",
            "default": "{{VERSION}}"
        },
        "ignoreStyles": {
            "type": "boolean",
            "description": "Should executor add plugin for styles.",
            "default": false
        },
        "cssBundle": {
            "type": "string",
            "description": "The path to tsconfig file."
        },
        "entryFile": {
            "type": "string",
            "description": "The path to tsconfig file."
        },
        "tsConfig": {
            "type": "string",
            "description": "The path to tsconfig file."
        },
        "project": {
            "type": "string",
            "description": "The path to package.json file."
        },
        "deleteOutputPath": {
            "type": "boolean",
            "description": "Delete the output path before building.",
            "default": true
        },
        "watch": {
            "type": "boolean",
            "description": "The path to package.json file.",
            "default": false
        }
    },
    "required": ["tsConfig", "project", "entryFile", "outputPath"]
}
