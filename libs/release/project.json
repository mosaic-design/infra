{
    "name": "release",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/release/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@mosaic-design/workspace:build-library",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/libs/release",
                "entryFile": "libs/release/src/index.ts",
                "tsConfig": "libs/release/tsconfig.lib.json",
                "project": "libs/release/package.json",
                "format": "commonjs",
                "assets": [
                    {
                        "glob": "libs/release/src/bin/dist-cli.js",
                        "input": ".",
                        "output": "./bin"
                    },{
                        "glob": "libs/release/src/templates",
                        "input": ".",
                        "output": "."
                    },
                    {
                        "glob": "libs/release/README.md",
                        "input": ".",
                        "output": "."
                    },
                    {
                        "glob": "libs/release/LICENSE",
                        "input": ".",
                        "output": "."
                    }
                ]
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["libs/release/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "libs/release/jest.config.js",
                "passWithNoTests": true
            }
        }
    },
    "tags": []
}
