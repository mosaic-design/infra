{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@mosaic-design/release": ["libs/release/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
